{
  "manifest_version": 3,
  "name": "Tab Snaps",
  "version": "1.0.0",
  "description": "Lightweight session manager for Chrome's native tab groups. Save and restore tab group snapshots with ease.",
  
  "permissions": [
    "tabs",
    "tabGroups",
    "storage",
    "contextMenus",
    "notifications"
  ],
  
  "commands": {
    "take-snapshot": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Take snapshot of current tab group"
    }
  },
  
  "background": {
    "service_worker": "background.js"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Tab Group Snapshots",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "options_page": "options.html",
  
  "web_accessible_resources": [
    {
      "resources": ["payment.html", "payment.js", "icons/*.png"],
      "matches": ["<all_urls>"]
    }
  ]
}